<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

<!--
-->

  <Import Project="$(MSBuildExtensionsPath)\StyleCop\v4.7\StyleCop.targets" />

  <!-- StyleCop settings -->  
  <!-- We want to override any properties that have been set declaratively in the project -->

  <Target Name="OverrideStyleCopProperties" Condition=" $(DumpDir) != '' "
              BeforeTargets="Compile" >

    <Message Importance="high" Text="Running StyleCop for Sonar..." />

    <PropertyGroup>
      <StyleCopOutputFile>$(DumpDir)\$(MSBuildProjectName)\SONAR_StyleCop.xml</StyleCopOutputFile>
      <StyleCopEnabled>true</StyleCopEnabled>
      <StyleCopTreatErrorsAsWarnings>true</StyleCopTreatErrorsAsWarnings>  
    </PropertyGroup>

  </Target>

</Project>